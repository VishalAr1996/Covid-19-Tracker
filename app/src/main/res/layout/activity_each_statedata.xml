<!--                    android:layout_gravity="center_vertical"-->
<!--                    android:fontFamily="@font/poppins_semibold"-->
<!--                    android:text="Check StateWise data"/>-->
<!--            </LinearLayout>-->

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>